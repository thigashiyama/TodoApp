@model IEnumerable<TodoApp.Models.TodoItem>

@{
    ViewData["Title"] = "Todo一覧";
}

<h2>Todo一覧</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">新規作成</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>タイトル</th>
            <th>完了</th>
            <th>作成日</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@(item.IsDone ? "✓" : "")</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('削除しますか？');">
                        <button type="submit" class="btn btn-danger btn-sm">削除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
